generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String      @id @default(uuid())
  name      String
  email     String      @unique
  password  String
  watchlist Watchlist[]
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

model Watchlist {
  id        String   @id @default(uuid())
  userId    String
  movieId   String
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
}
